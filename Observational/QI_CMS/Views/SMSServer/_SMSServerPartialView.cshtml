@model ES_CapDien.Models.RegisterSMSModel
<style type="text/css">

    #map {
        width: 100%;
        height: 400px;
    }
</style>
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-2 control-label" for="form-field-1">Chọn nhóm<span class="symbol required"></span></label>
            <div class="col-sm-8">
                <select id="listTypeNewID" class="form-control search-select" name="@Html.NameFor(q=>q.GroupId)" onchange="LoadArea(this)">
                    @if (ViewBag.listGroup != null)
                    {
                        foreach (var item in ViewBag.listGroup)
                        {
                            if (item.Id == Model.GroupId)
                            {
                                <option value="@item.Id" selected="selected">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-2 control-label" for="form-field-1">Chọn trạm<span class="symbol required"></span></label>
            <div class="col-sm-8">
                <select id="listAddsPosstions" class="form-control search-select" name="DeviceId">
                    @if (ViewBag.listSite != null)
                    {
                        foreach (var item in ViewBag.listSite)
                        {                            
                            if (item.DeviceId == Model.DeviceId)
                            {
                                <option value="@item.DeviceId" selected="selected">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.DeviceId">@item.Name</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-2 control-label" for="form-field-1">Chọn yếu tố<span class="symbol required"></span></label>
            <div class="col-sm-8">                
                <select multiple="" id="form-field-select-4" name="CodeObservation" class="form-control search-select select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                    @if (ViewBag.listObservation != null)
                    {
                        foreach (var item in ViewBag.listObservation)
                        {
                            if (Model != null && Model.CodeObservation != null&& Model.CodeObservation != "")
                            {
                                if (Model.CodeObservation.Trim().Contains(item.Code.Trim()))
                                {
                                    <option value="@item.Code" selected="selected">@item.Code</option>
                                }
                                else
                                {
                                    <option value="@item.Code">@item.Code</option>
                                }
                            }
                            else
                            {
                                <option value="@item.Code">@item.Code</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-2 control-label" for="form-field-1">Chọn SMS Server<span class="symbol required"></span></label>
            <div class="col-sm-8">
                <select id="SMSServerId" class="form-control search-select" name="@Html.NameFor(q=>q.SMSServerId)" onchange="LoadArea(this)">
                    @if (ViewBag.listSmsServer != null)
                    {
                        foreach (var item in ViewBag.listSmsServer)
                        {
                            if (Model.SMSServerId == item.Id)
                            {
                                <option value="@item.Id" selected="selected">@item.AddressIP</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.AddressIP</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-2 control-label" for="form-field-1">Danh sách số điện thoại<span class="symbol required"></span></label>
            <div class="col-sm-8">
                @Html.TextAreaFor(item => item.DanhSachSDT, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                @Html.ValidationMessageFor(item => item.DanhSachSDT)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-7"></div>
            <div class="col-sm-5">
                <input class="btn btn-primary" type="submit" value="Lưu" id="btnAdd" style="width:100px;" />
                <a class="btn btn-dark-grey" href="@Url.Action("SitesManagement",new { page=Request.Params["page"], pageSize=Request.Params["pageSize"], title=Request.Params["title"]})" style="width: 100px;">
                    Thoát
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
