@model ES_CapDien.Site

@if (Model != null)
{
    <div class="form-group panel-heading">
        <b>Thông tin điểm đo</b>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="site_detail">
                <div class="form-group">
                    <label>Điểm đo</label>
                    <input readonly="" id="SiteInfo" type="text" class="form-control" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input readonly="" type="text" class="form-control" value="@Model.Address">
                </div>
                <div class="form-group">
                    <label>Ghi chú</label>
                    <textarea readonly="" class="form-control"></textarea>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="col-sm-12">
        <div class="form-group panel-heading">
            <b>Điểm đo chưa có dữ liệu</b>
        </div>
    </div>
}






